  <h1>
    <%= @ingredient.name %>
    <% if @ingredient.best %>
    &#x2605;
    <% end %>
  </h1>
  <div class='ing_info'>
    Purpose: <%= @ingredient.purpose %><br><br>
    Products featuring this ingredient<br>
    <ul>
      <% @ingredient.creams.each do |c| %>
        <li><%= link_to c.name, c %></li>
      <% end %>
    </ul>
  </div>

  <div class='nav'>
    <%= link_to "Edit", edit_ingredient_path(@ingredient), method: :get %><br>
    <%= link_to "Delete", @ingredient, method: :delete, data: { confirm: "Are you sure?" } %><br>
    <%= link_to "New", new_ingredient_path, method: :get %><br>
    <%= link_to "All", ingredients_path %><br>
    <%= link_to "Home", root_path %>
  </div>
